{
  "info": {
    "name": "Mankind Wishlist API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Add Item to Wishlist",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/wishlist?userId={{user_id}}&productId={{product_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "wishlist"],
          "query": [
            {
              "key": "userId",
              "value": "{{user_id}}"
            },
            {
              "key": "productId",
              "value": "{{product_id}}"
            }
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "let json = pm.response.json();",
              "pm.test(\"Response contains wishlist item\", function () {",
              "    pm.expect(json.id).to.not.be.undefined;",
              "    pm.expect(json.userId).to.equal(Number(pm.environment.get(\"user_id\")));",
              "    pm.expect(json.productId).to.equal(Number(pm.environment.get(\"product_id\")));",
              "    pm.expect(json.name).to.not.be.undefined;",
              "    pm.expect(json.brand).to.not.be.undefined;",
              "    pm.expect(json.price).to.not.be.undefined;",
              "    pm.expect(json.discountedPrice).to.not.be.undefined;",
              "    pm.expect(json.imageUrl).to.not.be.undefined;",
              "    pm.expect(json.rating).to.not.be.undefined;",
              "    pm.expect(json.reviewCount).to.not.be.undefined;",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get User's Wishlist",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/wishlist/{{user_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "wishlist", "{{user_id}}"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "let json = pm.response.json();",
              "pm.test(\"Response is an array\", function () {",
              "    pm.expect(json).to.be.an(\"array\");",
              "});",
              "",
              "if (json.length > 0) {",
              "    pm.test(\"Wishlist items contain all required fields\", function () {",
              "        const item = json[0];",
              "        pm.expect(item.userId).to.not.be.undefined;",
              "        pm.expect(item.productId).to.not.be.undefined;",
              "        pm.expect(item.name).to.not.be.undefined;",
              "        pm.expect(item.brand).to.not.be.undefined;",
              "        pm.expect(item.price).to.not.be.undefined;",
              "        pm.expect(item.discountedPrice).to.not.be.undefined;",
              "        pm.expect(item.imageUrl).to.not.be.undefined;",
              "        pm.expect(item.rating).to.not.be.undefined;",
              "        pm.expect(item.reviewCount).to.not.be.undefined;",
              "    });",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Remove Item from Wishlist",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/wishlist?userId={{user_id}}&productId={{product_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "wishlist"],
          "query": [
            {
              "key": "userId",
              "value": "{{user_id}}"
            },
            {
              "key": "productId",
              "value": "{{product_id}}"
            }
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Check if Item is in Wishlist",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/wishlist/check?userId={{user_id}}&productId={{product_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "wishlist", "check"],
          "query": [
            {
              "key": "userId",
              "value": "{{user_id}}"
            },
            {
              "key": "productId",
              "value": "{{product_id}}"
            }
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "let json = pm.response.json();",
              "pm.test(\"Response is a boolean\", function () {",
              "    pm.expect(json).to.be.a(\"boolean\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
