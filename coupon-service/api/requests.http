  "code": "SAVE20",
  "name": "20% Off Sale",
  "description": "Get 20% off on all items",
  "type": "PERCENTAGE",
  "value": 20.00,
  "minimumOrderAmount": 50.00,
  "maxUsage": 100,
  "currentUsage": 0,
  "validFrom": "2025-08-04T17:39:59.297Z",
  "validTo": "2025-12-31T23:59:59.297Z",
